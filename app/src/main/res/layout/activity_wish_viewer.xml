<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mywishes.androidstudio.com.mywishes.WishViewer">


    <TextView
        android:id="@+id/textViewTitleId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wish Title"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="65dp" />

    <TextView
        android:id="@+id/textViewContentId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wish Description ..."
        android:textStyle="italic"
        android:textSize="14sp"
        android:textColor="#acaaa7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="103dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitleId" />

    <TextView
        android:id="@+id/textViewDateId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="Date"
        android:textSize="10sp"
        android:textColor="#acaaa7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textViewContentId"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0" />

</android.support.constraint.ConstraintLayout>